    <section class="bg-primary" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2><%= @connection.name %></h2>
                    <h3>Najniższa cena na tej linii to <b><%= @cheapest_price.to_s %> zł</b></h3>
                </div>
            </div>
        </div>
    </section>
    <%= will_paginate @courses, class: 'will_paginate_courses' %>
    <aside class="bg-dark">
        <div class="container">
			<table class="table table-hover courses">
			    <thead>
			      <tr>
			        <th>Odjazd</th>
			        <th>Przyjazd</th>
			        <th>Cena</th>
			      </tr>
			    </thead>
			    <tbody>
			    <% @courses.each do |c|%>
			      <tr class=" <%= (c.departure_time.saturday?||c.departure_time.sunday?)? 'weekend' : '' %> ">
			        <td><%= c.departure_time %></td>
			        <td><%= c.arrival_time %></td>
			        <td>
                        <% if c.price==@cheapest_price %>
                            <span style="color:#EF8D00"><b><%= c.price %></b></span>  <span class="label label-cheapest"> Najtaniej!</span>
                        <% else %>
                            <%= c.price %><pan>
                        <% end %>
                    </td>
			      </tr>
			     <% end %>
			    </tbody>
			  </table>
        </div>
    </aside>
    <%= will_paginate @courses, class: 'will_paginate_courses' %>
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Używasz wersji beta!</h2>
                    <hr class="primary">
                    <p>Aplikacja może zawierać błędy i jest wciąż modyfikowana!</p>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fa fa-envelope-o fa-3x wow bounceIn" data-wow-delay=".1s"></i>
                    <p><a href="mailto:kocasp@gmail.com">kocasp@gmail.com</a></p>
                </div>
            </div>
        </div>
    </section>
